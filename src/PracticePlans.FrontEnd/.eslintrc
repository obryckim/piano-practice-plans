{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true,
        "mocha": true
    },
    "rules": {
        "quotes": ["error", "single"],
        "no-var": "error",
        "semi": ["error", "always"],
        "curly": "error",
        "no-trailing-spaces": "error",
        "eol-last": ["error", "always"],
        "no-underscore-dangle": "error",
        "no-alert": "error",
        "no-lone-blocks": "error",
        "jsx-quotes": ["error", "prefer-single"]
    },
    "globals": {}
}
